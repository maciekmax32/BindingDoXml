<Window x:Class="Zadanie_4.CategoryDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category Details" Height="300" Width="400">
    <Grid>
        <ListBox x:Name="detailsListBox" Margin="20" BorderThickness="1" BorderBrush="Gray">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="showSubcategoryDetailsButton" Click="ShowSubcategoryDetailsButton_Click" Content="Pokaż szczegóły podkategorii" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"/>
    </Grid>
</Window>
